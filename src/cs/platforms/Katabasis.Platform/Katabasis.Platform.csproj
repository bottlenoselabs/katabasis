<Project Sdk="Microsoft.NET.Sdk">

  <!-- MSBuild Settings -->
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <!-- Reference all platforms -->
  <ItemGroup>
    <ProjectReference Include="..\Katabasis.Platform.linux-x64\Katabasis.Platform.linux-x64.csproj" />
    <ProjectReference Include="..\Katabasis.Platform.osx-x64\Katabasis.Platform.osx-x64.csproj" />
    <ProjectReference Include="..\Katabasis.Platform.win-x64\Katabasis.Platform.win-x64.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="_._">
      <Link>%(Filename)%(Extension)</Link>
      <PackagePath>lib/$(TargetFramework)/%(Filename)%(Extension)</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
</Project>
